<!-- Form Handaling -->
<form action="<%= action %>" method="POST" id="add_user">
    <div class="new_user">
        <div class="from-group">
            <label for="name" class="txt-dark">Name<span class="redTick"> *</span></label>
            <input type="hidden" name="id" value="<%= !OTPalert && submit ? user._id.valueOf() : "" %>">
            <input type="text" name="name" value="<%= alert || submit ? user.name : "" %>" placeholder="Elon Mask"
                required>
        </div>
        <div class="from-group">
            <label for="email" class="txt-dark">Email<span class="redTick"> *</span></label>
            <input type="text" name="email" value="<%= alert || submit ? user.email : "" %>"
                placeholder="example@gmail.com" required>
        </div>
        <div class="from-group admin-post ">
            <label for="post" class="txt-dark pe-4">Post<span class="redTick"> *</span></label>
            <div class="form-check px-4">
                <input class="form-check-input" type="radio" name="post" id="flexRadioDefault1" value="Talati" <%=(alert
                    && user.post=='Talati' ) || (submit && user.post=='Talati' ) ? 'checked' : '' %>>
                <label class="form-check-label" for="flexRadioDefault1">
                    Talati
                </label>
            </div>
            <div class="form-check px-4">
                <input class="form-check-input" type="radio" name="post" id="flexRadioDefault2" value="Mamlatdar"
                    <%=(alert && user.post=='Mamlatdar' ) || (submit && user.post=='Mamlatdar' ) ? 'checked' : '' %>>
                <label class="form-check-label" for="flexRadioDefault2">
                    Mamlatdar
                </label>
            </div>
        </div>
        <div class="from-group">
            <label for="password" class="txt-dark">Create Password<span class="redTick">
                    *</span></label>
            <input type="password" name="password" value="<%= submit ? user.password : "" %>"
                placeholder="Enter the password" minlength="8" required>
        </div>
        <div class="from-group">
            <label for="ConfirmPassword" class="txt-dark">Confirm Password<span class="redTick">
                    *</span></label>
            <input type="password" name="ConfirmPassword" value="<%= submit ? user.password : "" %>"
                placeholder="Enter the password" minlength="8" required>
        </div>
        <% if (!submit) { %>
            <div class="form-group form-check py-2">
                <input type="checkbox" class="form-check-input" name="termCondition" id="termCondition" required>
                <label class="form-check-label" for="termCondition"><span class="redTick">*</span>By
                    creating an account you agree to our Terms of Service and our Privacy Policy</label>
            </div>
            <% if (alert) { %>
                <div class="alert alert-danger" role="alert">
                    Please enter proper password
                </div>
                <% } %>
                    <div class="from-group">
                        <button type="submit" class="btn btn-outline-warning">Get OTP</button>
                    </div>
                    <% } %>
                        <% if (submit) { %>
                            <hr>
                            <div class="from-group">
                                <label for="OTP" class="txt-dark">Enter the OTP<span class="redTick">*</span></label>
                                <input type="number" name="OTP" value="" placeholder="Enter the OTP" minlength="6"
                                    maxlength="6" required>
                            </div>
                            <% if (OTPalert) { %>
                                <div class="alert alert-danger" role="alert">
                                    Please enter proper OTP
                                </div>
                                <% } %>
                                    <div class="from-group">
                                        <button type="submit" class="btn btn-outline-warning">Submit</button>
                                    </div>
                                    <% } %>
    </div>
</form>
<!-- /Form Handaling -->