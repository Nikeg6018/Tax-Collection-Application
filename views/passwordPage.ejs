<!-- Include Header -->
<%- include('include/_header')%>
    <!-- /Include Header -->

    <!-- Include Main Navbar -->
    <%- include('include/_Main-navbar')%>
        <!-- /Include Main Navbar -->

        <main>
            <div class="banner">
                <div class="hid"></div>
                <div class="container pt-5 main-container ">
                    <span>
                        <strong class="purpel-text">Forgot your Password</strong>
                    </span>
                    <hr>
                    <% if (alert) { %>
                        <div class="alert alert-danger px-4 mx-5" role="alert">
                            Please enter same password.
                        </div>
                        <% } %>
                            <% if (UserForgot) { %>
                                <!-- Form Handaling -->
                                <form action="/user/api/forgotPassword/<%= id %>" method="POST" id="add_user">
                                    <!-- Include _forgot_form -->
                                    <%- include('include/_password_edit_form')%>
                                        <!-- /Include _forgot_form -->
                                </form>
                                <!-- /Form Handaling -->
                                <% } else { %>
                                    <!-- Form Handaling -->
                                    <form action="/admin/api/forgotPassword/<%= id %>" method="POST" id="add_user">
                                        <!-- Include _forgot_form -->
                                        <%- include('include/_password_edit_form')%>
                                            <!-- /Include _forgot_form -->
                                    </form>
                                    <!-- /Form Handaling -->
                                    <% } %>
                </div>
            </div>
        </main>

        <!-- Include Footer -->
        <%- include('include/_footer')%>
            <!-- /Include Footer -->